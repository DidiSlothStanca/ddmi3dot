window {
    background-color:   @bg0;
    location:           center;
    width:              600;
    border-radius:      12;
    border:             2;
    border-color:       @accent;
}

inputbar {
    font:               "JetBrainsMono Nerd Font 13";
    padding:            12px;
    spacing:            12px;
    children:           [ icon-search, entry ];
}

icon-search {
    expand:             false;
    filename:           "search";
    size:               24px;
    vertical-align:     0.5;
}

entry {
    placeholder:        "Search Apps...";
    placeholder-color:  #6c7086;
    vertical-align:     0.5;
}

listview {
    fixed-height:       false;
    margin:             0 0 8px 0;
    lines:              8;
    columns:            1;
    scrollbar:          false;
}

element {
    padding:            8px 12px;
    spacing:            8px;
    border-radius:      8px;
    margin:             0 8px;
}

element normal.urgent, element alternate.urgent {
    text-color:         @urgent;
}

element selected.normal, element selected.urgent {
    background-color:   @accent;
    text-color:         @bg1;
}

element-icon {
    size:               24px;
}

element-text {
    vertical-align:     0.5;
}
