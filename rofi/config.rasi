configuration {
    show-icons: true;
    icon-theme: "Papirus"; 
}

* {
    font: "JetBrainsMono Nerd Font 11";
    
    /* VARIABEL WARNA PINK */
    bg0:    #FFB6C1E6; /* Transparansi */
    bg1:    #FF69B4;   /* Block Apps */
    fg0:    #2d3436;   /* Teks */
    accent: #FF1493;   /* Deep Border */
    urgent: #ff0000;   /* Pesan */

    background-color:   transparent;
    text-color:         @fg0;
    margin:             0;
    padding:            0;
    spacing:            0;
}

